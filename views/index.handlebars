<h1 class="text-center cool-font jumbotron">BurgerYum!</h1>
<div class="row">
    <div class="col-xs-6">
        <h2 class="cool-font">Burgers to eat!</h2>
        <ul>
            {{#each burgers}} {{#unless this.devoured}}
            <li>
                {{this.burgerName}}
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button type="submit" class="btn">EAT!</button>
                </form>
            </li>
            {{/unless}} {{/each}}
        </ul>
    </div>
    <div class="col-xs-6">
        <h2>Devoured Burgers!</h2>
        <ul>
            {{#each burgers}} {{#if this.devoured}}
            <li>
                {{this.burgerName}}
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="false">
                    <button type="submit" class="btn">BURGER!</button>
                </form>
            </li>
            {{/if}} {{/each}}
        </ul>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Create a burger of your liking</h2>
            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <label for="ca"></label>
                    <input type="text" id="ca" name="burgerName">
                </div>
                <button type="submit" class="btn">Add  BurgerYum!</button>
            </form>
        </div>
    </div>